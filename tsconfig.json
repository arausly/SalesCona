{
  "compilerOptions": {
      "target": "es5",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "esModuleInterop": true,
      "downlevelIteration": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "incremental": true,
      "plugins": [
          {
              "name": "next"
          }
      ],
      "paths": {
          "@lib/*": ["./lib/*"],
          "@assets/*": ["./assets/*"], 
          "@components/*": ["./components/*"],
          "@styles/*": ["./styles/*"],
          "@hooks/*": ["./hooks/*"],
          "@data/*": ["./data/*"], 
          "@db/*": ["./db/*"], 
          "@services/*": ["./services/*"], 
          "@supabase/*": ["./supabase/*"]
      }
  },
  "include": ["src/app/next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}